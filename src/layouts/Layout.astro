---
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = "The privacy-first reasoning engine designed for the hardware you already own. Your data. Your desk.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png?v=2" />
		<meta name="generator" content={Astro.generator} />

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Merriweather:wght@700;900&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
	</head>
	<body
		class="bg-rice-paper text-charcoal-ink font-body antialiased relative min-h-screen"
	>
		<!-- Background Noise Texture -->
		<div
			class="fixed inset-0 pointer-events-none z-50 opacity-40 bg-noise mix-blend-multiply"
		>
		</div>

		<header
			class="bg-rice-paper border-b-2 border-charcoal-ink sticky top-0 z-50"
		>
			<div
				class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between"
			>
				<a
					href="/"
					class="font-heading font-bold text-2xl text-charcoal-ink hover:text-olive-growth transition-colors flex items-center gap-3"
				>
					<img src="/favicon.png" alt="BonsAI Logo" class="h-8 w-8" />
					BonsAI
				</a>
			</div>
		</header>

		<main class="relative z-10 flex flex-col min-h-screen">
			<slot />
		</main>
	</body>
</html>
