---
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const { title, description = "The privacy-first reasoning engine designed for the hardware you already own. Your data. Your desk." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Merriweather:wght@700;900&display=swap" rel="stylesheet">
		
		<title>{title}</title>
	</head>
	<body class="bg-rice-paper text-charcoal-ink font-body antialiased relative min-h-screen">
		<!-- Background Noise Texture -->
		<div class="fixed inset-0 pointer-events-none z-50 opacity-40 bg-noise mix-blend-multiply"></div>
		
		<main class="relative z-10 flex flex-col min-h-screen">
			<slot />
		</main>
	</body>
</html>
