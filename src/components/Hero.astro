---
import { Image } from "astro:assets";
import Button from "./ui/Button.astro";
import logoMark from "../assets/images/core/logo-mark.png";
import { getDmgPath } from "../utils/getDmgPath";

const dmgPath = getDmgPath();
---

<section
    class="min-h-[90vh] flex flex-col items-center justify-center py-20 px-4 text-center relative overflow-hidden"
>
    <!-- Visual -->
    <div
        class="mb-8 relative z-10 w-32 md:w-48 animate-in fade-in zoom-in duration-1000 ease-out"
    >
        <Image
            src={logoMark}
            alt="BonsAI Woodcut Tree Logo"
            class="w-full h-auto drop-shadow-md opacity-90 mix-blend-multiply"
        />
    </div>

    <!-- Content -->
    <div class="max-w-4xl mx-auto space-y-6 relative z-10">
        <h1
            class="font-heading font-black text-5xl md:text-7xl tracking-tight text-charcoal-ink animate-in slide-in-from-bottom-4 fade-in duration-1000 delay-150 fill-mode-backwards"
        >
            Your data. Your desk.
        </h1>
        <p
            class="font-heading font-bold text-3xl md:text-4xl text-charcoal-ink/90 mt-4 animate-in slide-in-from-bottom-4 fade-in duration-1000 delay-200 fill-mode-backwards"
        >
            Private AI that runs on your Mac.
        </p>

        <p
            class="font-body text-xl md:text-2xl text-charcoal-ink/80 max-w-2xl mx-auto leading-relaxed animate-in slide-in-from-bottom-4 fade-in duration-1000 delay-300 fill-mode-backwards"
        >
            Chat, write, and work with your documentsâ€”locally.<br />No ads. No
            accounts. No subscriptions.<br />Your conversations stay on-device.
        </p>

        <div
            class="pt-8 animate-in slide-in-from-bottom-4 fade-in duration-1000 delay-500 fill-mode-backwards flex flex-col items-center gap-4"
        >
            <Button href={dmgPath} variant="primary" class="text-xl px-10 py-4">
                Download Beta (macOS)
            </Button>

            <ul
                class="mt-8 font-mono text-xs md:text-sm text-charcoal-ink/60 flex flex-col items-center gap-3"
            >
                <li class="text-center">Runs locally on Apple Silicon</li>
                <li class="text-center">
                    Stores chats and settings on your device
                </li>
                <li class="text-center">
                    No telemetry, no tracking, no background network requests
                </li>
            </ul>
        </div>
    </div>

    <!-- Intro Video -->
    <div
        class="w-full max-w-4xl mt-16 relative z-10 animate-in fade-in duration-1000 delay-700 fill-mode-backwards"
    >
        <div
            class="border-2 border-charcoal-ink shadow-base bg-white overflow-hidden"
        >
            <video class="w-full h-auto" autoplay muted playsinline>
                <source src="/Bonsai-Intro-Web.mp4" type="video/mp4" />
            </video>
        </div>
    </div>
</section>
